<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloudy_sky">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:boxCornerRadiusTopStart="@dimen/radius_medium"
        app:boxStrokeColor="@color/black_38"
        app:hintTextColor="@color/black_38"
        android:textColorHint="@color/black_38"
        app:boxCornerRadiusBottomEnd="@dimen/radius_medium"
        app:boxCornerRadiusTopEnd="@dimen/radius_medium"
        app:boxCornerRadiusBottomStart="@dimen/radius_medium"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_search"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="@string/search_country"
            android:textColor="@color/black"
            android:textColorHint="@color/black_38"
            android:drawableEnd="@drawable/search"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#1AFFF9F9"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/radius_normal"
        android:text="@string/explore"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/spacing_medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>
